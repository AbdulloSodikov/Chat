<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add_person_fragment.AddPersonFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_image_add"
        android:layout_width="155dp"
        android:layout_height="144dp"
        android:layout_margin="@dimen/appMargin"
        android:layout_marginTop="32dp"
        android:src="@drawable/person_default_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_person_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Имя"
        android:textColor="@color/colorBlack"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="@+id/add_person_surname"
        app:layout_constraintStart_toStartOf="@+id/add_person_surname"
        app:layout_constraintTop_toBottomOf="@+id/add_person_surname"
        android:background="@color/teal_200"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/add_person_surname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Фамилия"
        android:paddingStart="10dp"
        android:textColor="@color/colorBlack"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person_image_add"
        android:background="@color/teal_200"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/telegram_color"
        android:clickable="true"
        android:focusable="true"
        android:text="Добавить"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_person_name"
        app:layout_constraintStart_toStartOf="@+id/add_person_name"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>